{
  "functions": {
    "source": "/"
  },
  "hosting": [
    {
      "target": "admin",
      "public": "dist/apps/client/admin",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "portfolio",
      "public": "dist/apps/client/portfolio",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**/*.@(css|js)",
          "destination": "/index.html"
        },
        {
          "source": "**",
          "function": "ssr"
        }
      ]
    }
  ]
}
